@model MyHotel.Models.CardapioModel
@{
    ViewBag.Title = "Cadastro de Comidas";

    string vid = "";
    string vnome = "";
    string vValor = "";
    string vDescricao = "";



    try
    {
        vid = ViewBag.RecuperaCardapio.Id.ToString();
        vnome = ViewBag.RecuperaCardapio.Nome.ToString();
        vValor = ViewBag.RecuperaCardapio.Preco.ToString("N2");
        vDescricao = ViewBag.RecuperaCardapio.Descricao.ToString();
       
    }
    catch
    {

    }

}


<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-md-12">
        <h2 class="text-center">Cadastro de Comidas e Bebidas</h2>
    </div>
</div>

<br />
<br />
<br />

<form asp-controller="Cardapio" asp-action="CrearCardapio">

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-10">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input type="text" class="form-control" asp-for="Nome" value="@vnome">
            </div>
        

        
            <div class="form-group">
                <label for="Valor">Valor:</label>
                <input type="text" class="form-control"  asp-for="Preco" value="@vValor" id="preco"  required>
            </div>
        
        
            <div class="form-group">
                <label for="Descricao">Descricao:</label>
                @Html.TextArea("Descricao", vDescricao, new { @class = "form-control", @cols = 20, @rows = 4 })
            </div>
        </div>
    </div>
  
    <br />
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-10">
            <div class="form-group">
                <button type="submit" class="  btn-group-justified  btn btn-default btn-success">Registrar</button>
            </div>
        </div>
    </div>


</form>

 @section Scripts
        {
            <script>
                $(document).ready(function () {
        
                    $('#preco').mask('000.000.000.000.000,00', {reverse: true});
                    //$('#preco').mask("#.##0,00", {reverse: true});
                });
            </script>
        }        